    "github>konflux-ci/mintmaker//config/renovate/renovate.json",
    "group:allNonMajor",
    "schedule:earlyMondays"
  ],
  "prConcurrentLimit": 3,
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["golang-version"],
